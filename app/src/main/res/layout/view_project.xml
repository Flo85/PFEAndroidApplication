<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLightGrey"
        android:padding="6dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/jury_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/project_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:maxLines="2"
                android:minLines="2"
                android:padding="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:text="Title"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/etudiant_membres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/jury_date">
            <TextView
                android:id="@+id/etudiant_membres_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:padding="2dp"
                android:textColor="@color/colorPrimaryRedLight"
                android:text="Étudiants :"/>
            <TextView
                android:id="@+id/etudiant_membres_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="2dp"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                android:text="Étudiant 1, Étudiant 2"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>