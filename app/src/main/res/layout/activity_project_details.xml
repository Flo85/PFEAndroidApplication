<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLightGrey"
    tools:context="fr.eseo.dis.nerriefl.pfeandroidapplication.DetailProject">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:padding="2dp"
                    android:minLines="2"
                    android:maxLines="4"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Exemple de titre pour le test" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/project_details_confidentiality_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryGrey"
                        android:text="Confidentialité :"/>
                    <TextView
                        android:id="@+id/project_details_confidentiality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/project_details_supervisor_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryGrey"
                        android:text="Superviseur :"/>
                    <TextView
                        android:id="@+id/project_details_supervisor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="M. Supervisor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/project_details_students_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimaryGrey"
                        android:text="Étudiants :"/>
                    <TextView
                        android:id="@+id/project_details_students"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:maxLines="2"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Etudiant1, Etudiant 2, Etudiant 3"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title" />
                <TextView
                    android:id="@+id/project_details_description_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryGrey"
                    android:text="Description :"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/project_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:minLines="3"
                    android:text="Bonjour voici la description du sujet"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</RelativeLayout>
