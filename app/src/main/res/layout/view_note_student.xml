<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/project_notation_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="2dp"
        android:textColor="@color/colorPrimaryGrey"
        android:text="Notation :"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/project_note_moyenne_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryGrey"
            android:text="Note moyenne :"/>
        <TextView
            android:id="@+id/project_note_moyenne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:text="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/project_note_jury_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryGrey"
            android:text="Ma note :"/>
        <EditText
            android:id="@+id/project_note_jury"
            android:background="@drawable/edit_text_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <Button
        android:id="@+id/project_sauvegarde_note_jury"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:textColor="@color/colorPrimaryDark"
        android:text="SAUVEGARDER MA NOTE"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
